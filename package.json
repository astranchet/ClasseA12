{
  "name": "classe-a-12",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run copy-assets && npm run update-version && elm make src/Main.elm --optimize --output=build/app.js",
    "copy-assets": "rimraf build && mkdir build && cp -r public/* build",
    "update-version": "sed -i \"s/%VERSION%/`git rev-parse --short HEAD`/\" build/index.html",
    "switch-to-prod-server": "sed -i \"s/kinto-dev\\.classea12\\.beta\\.gouv\\.fr/kinto.classea12.beta.gouv.fr/\" build/index.html",
    "debug": "npm run live -- --debug",
    "deploy": "npm run build && gh-pages --dist build/ -o deploy",
    "deploy-prod": "npm run build && npm run switch-to-prod-server && gh-pages --dist build/ -o deploy-prod",
    "install": "elm make src/Main.elm",
    "live": "elm-live src/Main.elm --port=3000 --dir=public/ -u -- --output=public/app.js",
    "start": "npm run live",
    "test": "elm-test"
  },
  "author": "Mathieu Agopian",
  "license": "APL",
  "devDependencies": {
    "elm": "^0.19.0-bugfix2",
    "elm-format": "^0.8.0",
    "elm-hot": "^1.0.1",
    "elm-test": "beta",
    "gh-pages": "^1.1.0",
    "npm-run-all": "^4.1.2",
    "parcel-bundler": "^1.11.0",
    "rimraf": "^2.6.1"
  }
}
